<h2><%= t('.title') %></h2>
<div class="row">
  <div class="col-md-6 buffer-top">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, style: "font-weight: bold" %><br />
      <%= f.email_field :email, placeholder: "#{t '.email.enter'}", autofocus: true, autocomplete: "email", :class => "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label :password, style: "font-weight: bold" %><br />
      <%= f.password_field :password, placeholder: "#{t '.password.enter'}", autocomplete: "current-password", :class => "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('.title'), :class => "btn btn-primary"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
